<?xml version="1.0" encoding="utf-8"?><!-- A CardView that contains a TextView -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="bottom|left|right|top">

    <ImageView
        android:id="@+id/isomeoneherer"
        android:layout_width="fill_parent"
        android:layout_height="@android:dimen/thumbnail_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background"
        android:contentDescription="something"
        android:cropToPadding="false" />

    <RecyclerView  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@android:dimen/notification_large_icon_width"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="bottom|left|right|top">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/cardview_light_background"
            card_view:cardCornerRadius="4dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/card_view"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/card_view"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@android:dimen/notification_large_icon_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:text="HCG Aarau"
                    android:textAlignment="center"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/datum"
                    android:layout_width="wrap_content"
                    android:layout_height="@android:dimen/notification_large_icon_height"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="Morgen   20:00" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="@android:dimen/notification_large_icon_height"
                    android:layout_alignTop="@+id/info_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="vs"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="@android:dimen/notification_large_icon_height"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/info_text"
                    android:text="Wiler"
                    android:textAlignment="center"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView134"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Sportanlage Grossmatt Kirchberg BE"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_below="@+id/datum"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="-- : --"
                    android:textAlignment="center"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textStyle="bold" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="210dp"
            android:background="@color/cardview_light_background"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/card_view"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/card_view"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/info_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="@android:dimen/notification_large_icon_height"
                    android:text="HCG Aarau"
                    android:textAlignment="center"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textStyle="bold"
                    android:layout_alignTop="@+id/textView8"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/datum2"
                    android:layout_width="wrap_content"
                    android:layout_height="@android:dimen/notification_large_icon_height"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="Gestern 21:00" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="@android:dimen/notification_large_icon_height"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:text="vs"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="@android:dimen/notification_large_icon_height"
                    android:text="Wiler"
                    android:textAlignment="center"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textStyle="bold"
                    android:layout_alignTop="@+id/textView8"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Sportanlage Grossmatt Kirchberg BE"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_below="@+id/datum2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="1 : 0"
                    android:textAlignment="center"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="@android:dimen/notification_large_icon_height"
                    android:text="(2:2, 5:1, 1:2)"
                    android:textAlignment="center"
                    android:layout_below="@+id/textView9"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RecyclerView>
</RelativeLayout>
