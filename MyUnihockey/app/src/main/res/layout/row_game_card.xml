<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/cardview_light_background">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/card_view"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/card_view"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/team1"
                android:layout_width="wrap_content"
                android:layout_height="@android:dimen/notification_large_icon_height"
                android:text="HCG Aarau"
                android:textAlignment="center"
                android:textSize="@dimen/abc_text_size_large_material"
                android:textStyle="bold"
                android:layout_below="@+id/datum"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/gameresult"
                android:layout_toStartOf="@+id/gameresult" />

            <TextView
                android:id="@+id/datum"
                android:layout_width="wrap_content"
                android:layout_height="@android:dimen/notification_large_icon_height"
                android:layout_alignParentTop="true"
                android:text="Morgen   20:00"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/vs"
                android:layout_width="wrap_content"
                android:layout_height="@android:dimen/notification_large_icon_height"
                android:text="vs"
                android:textAlignment="center"
                android:layout_alignTop="@+id/team1"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/gameresult" />

            <TextView
                android:id="@+id/team2"
                android:layout_width="wrap_content"
                android:layout_height="@android:dimen/notification_large_icon_height"
                android:text="Wiler"
                android:textAlignment="center"
                android:textSize="@dimen/abc_text_size_large_material"
                android:textStyle="bold"
                android:layout_alignTop="@+id/team1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/gameresult"
                android:layout_alignLeft="@+id/datum"
                android:layout_alignStart="@+id/datum" />

            <TextView
                android:id="@+id/ort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Sportanlage Grossmatt Kirchberg BE"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gameresult"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="-- : --"
                android:textAlignment="center"
                android:textSize="@dimen/abc_text_size_large_material"
                android:textStyle="bold"
                android:layout_above="@+id/ort"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>