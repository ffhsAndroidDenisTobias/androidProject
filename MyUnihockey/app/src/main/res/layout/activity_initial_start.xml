<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff44336"
    android:measureWithLargestChild="false"
    android:orientation="vertical">


    <GridLayout
        android:id="@+id/mainLayout2"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="20"
        android:columnCount="1"
        android:orientation="vertical"
        android:rowCount="22">

        <TextView
            android:id="@+id/txtviewheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:paddingLeft="@dimen/abc_action_bar_progress_bar_size"
            android:paddingTop="100dp"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffffff"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/txtviewsubheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:paddingBottom="@dimen/abc_action_bar_progress_bar_size"
            android:paddingLeft="@dimen/abc_action_bar_progress_bar_size"
            android:paddingRight="@dimen/abc_action_bar_progress_bar_size"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffcdd2"
            android:textIsSelectable="false" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinOptions" />

        <LinearLayout
            android:id="@+id/progressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="21"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@android:dimen/app_icon_size">

            <RadioButton
                android:id="@+id/rdbProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:textColor="#FFC107" />
        </LinearLayout>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnprev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:clickable="true"
            android:text="New Button"
            android:textColor="#ff212121" />

        <Button
            android:id="@+id/btnnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:clickable="true"
            android:text="New Button"
            android:textColor="#ff212121" />
    </LinearLayout>

</LinearLayout>